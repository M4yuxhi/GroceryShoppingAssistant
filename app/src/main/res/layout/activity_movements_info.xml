<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fucsia"
    tools:context=".MovementsInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMovInf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/movements_info_name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/moveInfoLV"
            android:layout_width="392dp"
            android:layout_height="686dp"
            android:background="@color/scaredPurple"
            android:backgroundTint="@color/scaredPurple" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>